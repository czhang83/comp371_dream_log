<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dreamlog">

    <application
        android:name="com.example.dreamlog.DreamApplication"

        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ToDoList">
        <activity android:name="com.example.dreamlog.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.dreamlog.AddActivity" />
        <activity android:name="com.example.dreamlog.DetailActivity" />
        <activity android:name="com.example.dreamlog.UpdateActivity" />
    </application>

</manifest>